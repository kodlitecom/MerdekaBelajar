<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.HelpActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/back_faq"
        android:fontFamily="@font/extrabold"
        android:padding="14dp"
        android:text="Beritahu kami masukan dan kritikan terhadap aplikasi ini, sehingga kami tahu apa yang telah kami lakukan benar dan dimana kami dapat terus berinovasi"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="textEmailAddress"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Alamat Surel Anda"
        app:met_floatingLabelTextColor="@color/grey"
        app:met_textColorHint="@color/grey"
        android:textColor="@color/purle"
        android:hint="Alamat Surel Anda"
        android:fontFamily="@font/light"
        android:textSize="12sp"
        app:met_underlineColor="@color/purle"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:inputType="text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Masukan/ Kritikan/ Masalah"
        app:met_floatingLabelTextColor="@color/grey"
        app:met_textColorHint="@color/grey"
        app:met_maxCharacters="300"
        android:maxLines="5"
        android:maxLength="300"
        android:textColor="@color/purle"
        android:hint="Masukan/ Kritikan/ Masalah"
        android:fontFamily="@font/light"
        android:textSize="12sp"
        app:met_underlineColor="@color/purle"/>

    <TextView
        android:id="@+id/kirim"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="KIRIM"
        android:gravity="center"
        android:background="@drawable/back_faq"
        android:fontFamily="@font/bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>